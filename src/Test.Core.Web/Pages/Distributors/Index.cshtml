@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Test.Core.Permissions
@using Test.Core.Web.Pages.Distributors
@using Test.Core.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using Test.Core.Localization
@inject IHtmlLocalizer<CoreResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Distributors"].Value;
    PageLayout.Content.MenuItemName = CoreMenus.Distributors;
}

@section scripts
{
    <abp-script src="/Pages/Distributors/index.js" />
}

@section content_toolbar {
    @if (await Authorization.IsGrantedAsync(CorePermissions.Distributors.Create))
    {
        <abp-button id="NewDistributorButton" text="@L["NewDistributor"].Value" icon="plus" button-type="Primary" />
    }
}

<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]"/>
                        <abp-button button-type="Primary" type="submit" icon="search"/>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-input asp-for="CompanyNameFilter" label="@L["CompanyName"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="TaxIDFilter" label="@L["TaxID"].Value" />
            </abp-column>
        </abp-row>

        <abp-table striped-rows="true" id="DistributorsTable">
            <thead>
				<tr>
					<th>@L["Actions"]</th>
					<th>@L["CompanyName"]</th>
					<th>@L["TaxID"]</th>

				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>