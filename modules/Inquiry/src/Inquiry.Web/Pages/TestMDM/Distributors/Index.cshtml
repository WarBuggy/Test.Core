@page
@using Inquiry.Localization
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using TestMDM.Permissions
@using Inquiry.Web.Pages.Distributors;
@using TestMDM.Web.Menus;
@using Microsoft.AspNetCore.Mvc.Localization
@using TestMDM.Localization
@inject IHtmlLocalizer<TestMDMResource> LTestMDMDistributor
@inject IHtmlLocalizer<InquiryResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = LTestMDMDistributor["Distributors"].Value;
    PageLayout.Content.MenuItemName = TestMDMMenus.Distributors;
}

@section scripts
    {
    <abp-script src="/Pages/TestMDM/Distributors/index.js" />
}
    @section content_toolbar {
    @if (await Authorization.IsGrantedAsync(TestMDMPermissions.Distributors.Create))
    {
        <abp-button id="NewDistributorButton" text="@L["NewDistributor"].Value" icon="plus" button-type="Primary" />
    }
}

    <abp-card>
        <abp-card-body>
            <abp-row class="mb-3">
                <abp-column size-md="_12">
                    <form id="SearchForm" autocomplete="off">
                        <div class="input-group">
                            <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]" />
                            <abp-button button-type="Primary" type="submit" icon="search" />
                        </div>
                    </form>
                </abp-column>
                <abp-column size-md="_12" class="mt-3">
                    <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
                </abp-column>
            </abp-row>

            <abp-row id="AdvancedFilterSection" style="display: none;">
                <abp-column size="_3">
                    <abp-input asp-for="CompanyNameFilter" label="@LTestMDMDistributor["CompanyName"].Value" />
                </abp-column>
                <abp-column size="_3">
                    <abp-input asp-for="TaxIdFilter" label="@LTestMDMDistributor["TaxId"].Value" />
                </abp-column>
                <abp-column size="_3">
                    <div class="form-group">
                        <label class="mb-2" id-for="IdentityUserFilter">@L["Tab:Distributor:IdentityUsers"]</label>
                        <select id="IdentityUserFilter"
                            name="IdentityUserFilter"
                            class="custom-select form-control"
                            style="width: 100%"
                            data-value="">
                        </select>
                    </div>
                </abp-column>
            </abp-row>

            <abp-table striped-rows="true" id="DistributorsTable">
                <thead>
                    <tr>
                        <th>@L["Actions"]</th>
                        <th>@L["CompanyName"]</th>
                        <th>@L["TaxId"]</th>
                        <th>@L["Tab:Distributor:IdentityUsers"]</th>
                    </tr>
                </thead>
            </abp-table>
        </abp-card-body>
    </abp-card>